@using MovieExplorer.Web.ViewModels.Movies
@model IEnumerable<MovieViewModel>

@foreach (var item in this.Model)
{
    <h4 class="card-title text-center">
        <a class="row-cols-1 text-dark" asp-controller="Movie" asp-action="MoviePage" asp-route-id="@item.MovieId">@item.Name</a>
    </h4>

    <div class="row">
        <div>
            <div class="col-xs-12 col-sm-6 col-md-8 col-centered">
                <div class="maintxt">
                    <img height="400" width="450" src="@item.ImageUrl" class="img-responsive justify-content-center rounded" />
                </div>
            </div>
        </div>
    </div>
}

