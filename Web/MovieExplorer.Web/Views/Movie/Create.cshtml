@using MovieExplorer.Web.ViewModels.Movies
@model MovieInputModel

<h1>Create Movie</h1>

<form asp-controller="Movie" asp-action="Create" method="post">
    <div>
        <label for="Title">Title</label>
        <input type="text" class="form-control col-md-6" name="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label for="ReleaseDate">ReleaseDate</label>
        <input type="date" class="form-control col-md-6" name="ReleaseDate" />
        <span asp-validation-for="ReleaseDate"></span>
    </div>

    <div>
        <label asp-for="Minutes">Minutes</label>
        <input type="text" class="form-control col-md-6" name="Minutes" />
        <span asp-validation-for="Minutes"></span>
    </div>

    <div>
        <label asp-for="Rate">Rate</label>
        <input type="text" class="form-control col-md-6" name="Rate" />
        <span asp-validation-for="Rate"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input type="text" class="form-control col-md-6" name="ImageUrl" />
        <span asp-validation-for="ImageUrl"></span>
    </div>
    <div>
        <label asp-for="Trailer"></label>
        <input type="text" class="form-control col-md-6" name="Trailer" />
        <span asp-validation-for="Trailer"></span>
    </div>
    <div>
        <label asp-for="DirectorId"></label>
        <select asp-for="DirectorId" asp-items="@this.Model.AllListDirectors" class="form-control">
        </select>
    </div>
    <div>
        <label asp-for="CountryId"></label>
        <select asp-for="CountryId" asp-items="@this.Model.AllListCoutries" class="form-control">
        </select>
    </div>
    <div>
        <label asp-for="ActorsId">Actors</label>
        <select multiple="multiple" class="multi-select form-control" id="ActorsId" asp-for="ActorsId" asp-items="@this.Model.AllListActors">
        </select>
    </div>
    <div>
        <label asp-for="GenresId">Genres</label>
        <select multiple="multiple" class="multi-select form-control" id="GenresId" asp-for="GenresId" asp-items="@this.Model.AllListGenres">
        </select>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-success ">Create Movie</button>
    </div>
</form>
