@using MovieExplorer.Common
@using MovieExplorer.Web.ViewModels.Movies
@model IEnumerable<MovieViewModel>
@{
    this.ViewData["Title"] = "Home Page";
}

<a class="btn-primary" asp-controller="Movie" asp-action="Create">Create Movie</a>
<a class="btn-primary" asp-controller="Director" asp-action="Create">Create Director</a>

<div class="row">
    @foreach (var item in this.Model)
    {
        <div class="col-md-3">
            <img hight="300" width="250" src="@item.ImageUrl" alt="Image" />
            <a asp-controller="Movie" asp-action="MoviePage">@item.Name</a>
        </div>
    }
</div>
<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
